@model IEnumerable<Travely.Models.TblNotification>

@{
    var canManageAny = User.IsInRole("admin") || User.IsInRole("staff");
    var userIdClaim = User.FindFirst("UserId");
    var currentUserId = userIdClaim != null ? int.Parse(userIdClaim.Value) : 0;
}

<div class="notifications-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>All Notifications</h1>
        @if (User.IsInRole("admin") || User.IsInRole("staff"))
        {
            <a asp-action="Create" asp-controller="Notifications" class="ColorBtn">
                <i class="fas fa-plus-circle me-2"></i> Create New Notification
            </a>
        }
    </div>

    <div class="notifications-layout">
        <div class="notifications-list">
            @if (!Model.Any())
            {
                <div class="empty-state text-center text-muted py-5">
                    <i class="fas fa-bell-slash fa-3x mb-3"></i>
                    <p>No notifications yet.</p>
                </div>
            }
            else
            {
                foreach (var n in Model)
                {
                    bool canDelete = canManageAny || (n.UserId.HasValue && n.UserId.Value == currentUserId);
                    <div class="notification-card @(n.IsRead ? "" : "unread")" data-id="@n.NotificationId">
                        <div class="notif-main" onclick="showNotification('@n.Title', '@n.Message', '@n.CreatedAt.ToString("dd/MM/yyyy HH:mm")')">
                            <h6 class="notif-title">@n.Title</h6>
                            <small class="text-muted">@n.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="notif-actions mt-2 d-flex gap-2">
                            @if (!n.IsRead)
                            {
                                <button type="button" class="btn btn-sm btn-outline-secondary mark-read-btn" data-id="@n.NotificationId" title="Mark as read">
                                    <i class="fas fa-check"></i>
                                </button>
                            }
                            @if (canDelete)
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger delete-notif-btn" data-id="@n.NotificationId" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <div class="notification-details" id="notifDetails">
            <div class="empty-details text-center text-muted">
                <i class="far fa-bell fa-4x mb-3"></i>
                <p>Select a notification to view details</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .notifications-layout {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
        }

        .notifications-list {
            background: #fff;
            border-radius: 15px;
            padding: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            height: 420px;
            overflow-y: auto;
        }

        .notification-card {
            background: #f9fafb;
            border: 1px solid #eee;
            border-radius: 10px;
            padding: 12px 15px;
            margin-bottom: 10px;
            transition: all .3s ease;
        }

            .notification-card.unread {
                background-color: #edf5ff;
                border-left: 4px solid color-mix(in srgb,#2f5d50,white 5%);
            }

            .notification-card:hover {
                background-color: #eef6ff;
            }

        .notif-actions .btn {
            padding: 3px 8px;
        }
    </style>

    <script>
        async function refreshUnreadBadge() {
            const role = document.querySelector('meta[name="user-role"]')?.content || "User";
            const userId = document.querySelector('meta[name="user-id"]')?.content || 0;
            try {
                const res = await fetch(`/Notifications/Count?role=${role}&userId=${userId}`);
                if (res.ok) {
                    const count = await res.json();
                    const badge = document.getElementById("notifBadge");
                    if (badge) {
                        if (count > 0) {
                            badge.textContent = count;
                            badge.hidden = false;
                        } else {
                            badge.hidden = true;
                        }
                    }
                }
            } catch { /* ignore */ }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const listEl = document.querySelector(".notifications-list");

            listEl.addEventListener("click", async function (e) {
                const markBtn = e.target.closest(".mark-read-btn");
                const delBtn = e.target.closest(".delete-notif-btn");

                if (markBtn) {
                    const id = markBtn.getAttribute("data-id");
                    try {
                        const res = await fetch(`/Notifications/MarkAsRead?id=${id}`, { method: "POST" });
                        if (res.ok) {
                            const data = await res.json();
                            const card = document.querySelector(`.notification-card[data-id='${id}']`);
                            if (card) {
                                card.classList.remove("unread");
                                markBtn.remove(); // remove button after marking
                            }
                            refreshUnreadBadge();
                        }
                    } catch { }
                }

                if (delBtn) {
                    if (!confirm("Delete this notification?")) return;
                    const id = delBtn.getAttribute("data-id");
                    try {
                        const res = await fetch(`/Notifications/Delete?id=${id}`, { method: "POST" });
                        if (res.ok) {
                            const data = await res.json();
                            const card = document.querySelector(`.notification-card[data-id='${id}']`);
                            if (card) card.remove();
                            if (document.querySelectorAll(".notification-card").length === 0) {
                                listEl.innerHTML = `<div class="empty-state text-center text-muted py-5">
                                    <i class="fas fa-bell-slash fa-3x mb-3"></i>
                                    <p>No notifications yet.</p>
                                </div>`;
                            }
                            refreshUnreadBadge();
                        }
                    } catch { }
                }
            });

            refreshUnreadBadge();
        });
    </script>
}