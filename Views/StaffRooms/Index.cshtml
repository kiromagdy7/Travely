@model IEnumerable<Travely.Models.TblRoom>

@{
    ViewData["Title"] = "My Hotel Rooms";
}

<h2 class="mb-4">Rooms for Your Hotel</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">No rooms found for your hotel.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Room ID</th>
                <th>Room Number</th>
                <th>Type</th>
                <th>Beds</th>
                <th>Price</th>
                <th>Max Guests</th>
                <th>Breakfast</th>
                <th>Pets Allowed</th>
                <th>Available</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomId</td>
                    <td>@room.RoomNumber</td>
                    <td>@room.RoomType</td>
                    <td>@room.BedsCount</td>
                    <td>@room.Price</td>
                    <td>@room.MaxGuests</td>
                    <td>@(room.BreakfastIncluded ? "Yes" : "No")</td>
                    <td>@(room.PetsAllowed ? "Yes" : "No")</td>
                    <td>@(room.Available ? "Available" : "Not Available")</td>
                </tr>
            }
        </tbody>
    </table>
}
