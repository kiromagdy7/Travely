                                <li>
                                    <a class="nav-link text-danger" asp-area="" asp-controller="Rooms" asp-action="Index">Manage Rooms</a>
                                </li>
                            }
                            @if (User.IsInRole("admin"))
                            {
                                <li>
                                    <a class="nav-link text-danger" asp-area="" asp-controller="TblUsers" asp-action="Index">Manage Users</a>
                                </li>
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole("customer"))
                                {
                                    <li>
                                        <a class="nav-link text-primary" asp-area="" asp-controller="WishList" asp-action="Index">My Wishlist</a>
                                    </li>
                                }
                                <li>
                                    <span class="navbar-text text-dark me-3">Welcome, @User.Identity.Name!</span>
                                </li>
                                <li>
                                    <a class="nav-link btn btn-outline-danger btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li>
