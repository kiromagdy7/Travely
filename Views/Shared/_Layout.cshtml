<body>
        <header id="header" class="header sticky-top">

            <div class="topbar d-flex align-items-center dark-background">
                <div class="container d-flex justify-content-center justify-content-md-between">
                    <div class="contact-info d-flex align-items-center">
                        <i class="bi bi-envelope d-flex align-items-center"><a href="#">info@Travely.com</a></i>
                        <i class="bi bi-phone d-flex align-items-center ms-4"><span>+2 33 123 4567 8901</span></i>
                    </div>
                    <div class="social-links d-none d-md-flex align-items-center">
                        <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div><!-- End Top Bar -->


            <div class="branding d-flex align-items-cente">

                <div class="container position-relative d-flex align-items-center justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center site-logo hover-effect">
                    <img src="~/img/logo.webp" alt="logo">
                </a>

                    <nav id="navmenu" class="navmenu">
                        <ul>
                            <li><a class="active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                            <li><a asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a></li>

                            @if (User.IsInRole("admin") || User.IsInRole("staff"))
                            {
                                <li>
                                    <a asp-area="" asp-controller="Rooms" asp-action="Index">Manage Rooms</a>
                                </li>
                            }
                            @if (User.IsInRole("admin"))
                            {
                                <li>
                                    <a asp-area="" asp-controller="TblUsers" asp-action="Index">Manage Users</a>
                                </li>
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole("customer"))
                                {
                                    <li><a asp-area="" asp-controller="WishList" asp-action="Index">My Wishlist</a></li>
                                }

                                <li><span>Welcome, @User.Identity.Name!</span></li>

                                <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            }
                        </ul>
                        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                    </nav>

                </div>

            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

