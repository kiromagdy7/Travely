                        <ul>
                            <li><a class="active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-area="" asp-controller="Hotels" asp-action="Index">Hotels</a></li>
                            <li><a asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a></li>
