                            <li><a asp-area="" asp-controller="Home" asp-action="Amenities">Amenities</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Location">Location</a></li>


                            @if (User.IsInRole("admin") || User.IsInRole("staff"))
