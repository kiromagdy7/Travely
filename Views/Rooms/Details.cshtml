@model Travely.Models.TblRoom

@{
    ViewData["Title"] = "Room Details";
}

<h1>Room Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Hotel</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TblHotel.HotelName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoomType)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomType)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Capacity)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsAvailable)</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                @(Model.IsAvailable ? "Available" : "Occupied")
            </span>
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
